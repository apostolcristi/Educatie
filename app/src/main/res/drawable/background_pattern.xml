<!-- res/drawable/background_pattern.xml -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gradient to create a background pattern -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#F2F2F2"
                android:endColor="#E6E6E6"
                android:angle="45"/>
        </shape>
    </item>

    <!-- Diagonal lines to simulate a pattern -->
    <item android:left="100dp">
        <bitmap
            android:src="@drawable/ic_diagonal_lines"
            android:tileMode="repeat"/>
    </item>

</layer-list>
